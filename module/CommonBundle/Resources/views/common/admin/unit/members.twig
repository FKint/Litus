{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'common/admin/unit/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width member_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The member was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width member_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete the member.</p>
        </div>
    </div>

    <div id="controller_action">
        <h1>Unit</h1>
        <p>Name: <b>{{ unit.getName() }}</b></p>

        <h1>Members</h1>

        {% import 'admin/partials/form.twig' as forms %}
        {{ forms.renderForm(form) }}

        <br style="clear:both">

        <table class="full_width" style="margin-top: 5px;">
            <tr>
                <th>Name</th>
                <th>Coordinator</th>
                <th width="90px">Actions</th>
            </tr>
            {% for member in members %}
                <tr class="item item-{{ admin.getId() }}">
                    <td>{{ member.getAcademic().getFullName() }}</td>
                    <td>{% if member.isCoordinator() %}&times;{% endif %}</td>
                    <td>
                        {% if hasAccess('common_admin_unit', 'deleteMember') %}
                            <a href="#" data-id="{{ member.getId() }}" data-name="{{ member.getAcademic().getFullName() }}" class="delete">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>

    <div class="modal hide fade" id="removeEntry">
        <div class="modal-header">
            <span>Litus Admin</span>
            /Delete Admin
        </div>
        <div class="modal-body">
            <p>
                You are about to delete the following member: <b class="memberName"></b>!
                Please note that this operation cannot be undone!
            </p>
            <p>
                Are you sure you want to continue?
            </p>
            <div class="footer">
                <input type="button" class="delete" value="Yes">
                <input type="button" class="cancel" data-dismiss="modal" value="No">
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#personSearch').typeaheadRemote(
                {
                    source: '{{ url('common_admin_academic_typeahead', {})}}',
                    items: 20,
                }
            ).change(function (e) {
                if ($(this).data('value')) {
                    $('#personId').val($(this).data('value').id);
                } else {
                    $('#personId').val('');
                }
            });
            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);

            e.preventDefault();
            var removeEntry = $('#removeEntry');
            removeEntry.find('.memberName').html($(this).data('name'));
            var id = $this.data('id');
            removeEntry.find('.delete').unbind('click').click(function () {
                $.post('{{ url('common_admin_unit', {"action": "deleteMember"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.member_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeEntry.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeEntry.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.member_removed_error').removeClass('hide');
            $('#removeEntry').modal('hide');
        }
    </script>
{% endblock %}
