{% extends 'site/base.twig' %}

{% block content %}
    <div class="page-header">
        <h1>{{ page.getTitle(language) }}</h1>
    </div>

    {% if status == 'noauth' %}
        <p>{{translate('You do not have permission to view this page! Make sure you are logged in.')}}</p>
    {% elseif status == 'disabled' %}
        <p>{{translate('Orders for ISIC cards are currently disabled, please try again later.')}}</p>
    {% else %}
        <div id="controller_action">
            <p>Fill in the form below to order your ISIC card for {{price}}â‚¬. Once your card is available, you will receive an email and come pick it up at our bookstore. For more information about ISIC cards, check out <a href="http://www.guido.be/isic">this page</a>.</p>
            <p>NOTE: you cannot cancel your order after you hit the order button!</p>
            {% import 'site/partials/form.twig' as forms %}
            {{ forms.renderForm(form) }}
        </div>
    {% endif %}
{% endblock %}