{{ doctype() }}

<html lang="en">
<head>

    {{ headMeta() }}
    {{ headTitle('Ticket Sale', 'PREPEND') }}

    {{ headLink() }}
</head>

<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <a href="{{ unionUrl }}" class="brand"><img src="/_ticket/img/logo.png" /></a>
            <ul class="nav">
            </ul>
            <ul class="nav pull-right lang-nav visible-desktop">
                <li class="dropdown" id="langDropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Language <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        {% for language in languages %}
                            <li>
                                <a href="{{ url("ticket_sale_index", {"language": language.getAbbrev()}) }}">{{ translate(language.getName()) }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>

<header>
    <div class="inner">
        <div class="container">
            <h1>{{ translate('Ticket Sale') }}</h1>
        </div>
    </div>
</header>

<div class="container">
    {% include 'run/partials/flashMessenger.twig' %}

    <div id="content_controller">
        {% block content %} {% endblock %}
    </div>

    <footer>
        Litus Ticket | Code by <a href="http://litus.cc">Litus</a>
    </footer>
</div>

{{ inlineScript() }}

{% block content_script %}{% endblock %}

</body>
</html>
