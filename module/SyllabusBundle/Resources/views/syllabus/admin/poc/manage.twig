{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'syllabus/admin/poc/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}

    <div class="flashmessage success_message full_width poc_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The poc was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width poc_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete the poc.</p>
        </div>
    </div>

    {% include 'syllabus/admin/poc/partials/years.twig' %}

    <div id="controller_action">
        <table class="full_width manage">
            <tr>
                <th>Poc group name</th>
                <th width="300px">Poc'er</th>
                <th width="70px">Actions</th>
            </tr>

            {% for poc in paginator %}
                <tr class="item item-{{ poc.getId() }}">
                    <td>{{ poc.getGroupId().getName() }}</td>
                    <td>{{ poc.getAcademic().getFullName() }}</td>
                    <td class="actions">
                        {% if hasAccess('syllabus_admin_poc', 'edit') %}
                            <a href="{{ url('syllabus_admin_poc', {'action': 'edit', 'id': poc.getId(), 'academicyear': currentAcademicYear.getCode()}) }}" class="edit">Edit</a>
                        {% endif %}
                        {% if hasAccess('syllabus_admin_poc', 'delete') %}
                            <a href="#" data-id="{{ poc.getId() }}" data-poc="{{ poc.getName() }}" class="delete">Delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </table>

        {% include 'admin/partials/paginationControl.twig' %}
    </div>

    <div class="modal fade" id="removePoc" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Delete Poc
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete the following poc: <b class="title"></b>!
                        Please note that this operation cannot be undone!
                    </p>
                    <p>
                        Are you sure you want to continue?
                    </p>
                    <div class="footer">
                        <button class="delete">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);
            e.preventDefault();
            var removePoc = $('#removePoc');
            removePoc.find('.title').html($(this).data('title'));
            var id = $this.data('id');
            removePoc.find('.delete').unbind('click').click(function () {
                $.post('{{ url('syllabus_admin_poc', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.poc_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removePoc.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removePoc.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.poc_removed_error').removeClass('hide');
            $('#removePoc').modal('hide');
        }
    </script>
{% endblock %}
