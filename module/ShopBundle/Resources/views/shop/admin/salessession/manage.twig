{% extends 'admin/base.twig' %}

{% block content %}
    {% include 'shop/admin/salessession/partials/navigation.twig' %}

    {% include 'admin/partials/flashMessenger.twig' %}
    <div class="flashmessage success_message full_width session_removed_success hide">
        <div class="title">Success</div>
        <div class="content">
            <p>The session was successfully removed!</p>
        </div>
    </div>
    <div class="flashmessage error_message full_width session_removed_error hide">
        <div class="title">Error</div>
        <div class="content">
            <p>An error occurred while trying to delete the session.</p>
        </div>
    </div>

    <div id="controller_action">
        <div id="session_search" style="display: none;">
            <div style="padding: 4px; text-align: right">
                Search:
                <select id="searchField">
                    <option value="name">Date</option>
                </select>
                is
                <input type="text" id="searchString" size="30"/>
            </div>

            <table class="full_width manage">
                <tr>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Remarks</th>
                    <th>Reservations possible</th>
                    <th width="70px">Actions</th>
                </tr>
            </table>
        </div>

        <div id="default_page">
            <table class="full_width manage">
                <tr>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Remarks</th>
                    <th>Reservations possible</th>
                    <th width="70px">Actions</th>
                </tr>

                {% for session in paginator %}
                    <tr class="item item-{{ session.getId() }}">
                        <td>{{ session.getStartTime() }}</td>
                        <td>{{ session.getEndTime() }}</td>
                        <td><input type="checkbox" {% if session.getReservationsPossible() %}checked{% endif %} }}
                                   disabled/></td>
                        <td class="actions">
                            {% if hasAccess('shop_admin_shop_session', 'edit') %}
                                <a href="{{ url('shop_admin_shop_session', {"action": "edit", "id": session.getId()}) }}"
                                   class="edit">Edit</a>
                            {% endif %}
                            {% if hasAccess('shop_admin_shop_session', 'delete') %}
                                <a href="#" data-id="{{ session.getId() }}" data-start="{{ session.getStartTime() }}"
                                   data-end="{{ session.getEndTime() }}"
                                   class="delete">Delete</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </table>

            {% include 'admin/partials/paginationControl.twig' %}
        </div>
    </div>

    <div class="modal fade" id="removeSession" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <span>Litus Admin</span>
                    /Delete Session
                </div>
                <div class="modal-body">
                    <p>
                        You are about to delete the following sales session: <b class="name"></b>?
                        Please note that this operation cannot be undone!
                    </p>

                    <p>
                        Are you sure you want to continue?
                    </p>

                    <div class="footer">
                        <button class="delete">Yes</button>
                        <button class="cancel" data-dismiss="modal">No</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block content_script %}
    <script type="text/javascript">
        $(document).ready(function () {
            {% if hasAccess('shop_admin_shop_session', 'search') %}
            $.searchDatabase({
                defaultPage: $('#default_page'),
                searchDiv: $('#session_search'),
                searchString: $('#searchString'),
                searchField: $('#searchField'),
                searchPage: '{{ url('shop_admin_shop_session', {'action': 'manage'}) }}manage/',
                url: '{{ url('shop_admin_shop_session', {'action': 'search'}) }}',
                display: function (data) {
                    $('#session_search table').find('tr.item').remove();
                    $(data).each(function () {
                        $('#session_search table').append(row = $('<tr>', {class: 'item item-' + this.id}));
                        row.append('<td>' + this.startDate + '</td>')
                                .append('<td>' + this.endDate + '</td>')
                                .append('<td>' + this.remarks + '</td>')
                                .append($('<td>')
                                        .append($('<input>', {type: "checkbox"})
                                                .attr('checked', this.reservationsPossible)))
                                .append(
                                $('<td>', {'class': 'actions'})
                                        .append('<a href="{{ url('shop_admin_shop_session', {"action": "edit"}) }}' + this.id + '" class="edit">Edit</a>')
                                        .append(deleteButton = $('<a href="#" class="delete">Delete</a>'))
                        );
                        deleteButton.data({
                            id: this.id,
                            fullName: this.startDate+" - "+this.endDate
                        });
                    });
                    $('#session_search .delete').click(openModal);
                    $('#session_search table').change();
                },
                clear: function () {
                    $('#session_search table').find('tr.item').remove();
                }
            });
            {% endif %}

            $('.item .delete').click(openModal);
        });

        function openModal(e) {
            var $this = $(this);
            e.preventDefault();
            var removeSession = $('#removeSession');
            removeSession.find('.name').html($(this).data('name'));
            removeSession.find('.cancel').one('click', function () {
                removeSession.modal('hide');
            });
            var id = $this.data('id');
            removeSession.find('.delete').unbind('click').click(function () {
                $.post('{{ url('shop_admin_shop_session', {"action": "delete"})}}' + id, function (data) {
                    if (data && 'success' == data.status) {
                        $('.flashmessage').addClass('hide');
                        $('.session_removed_success').removeClass('hide');
                        $('.item-' + id).remove();
                        removeSession.modal('hide');
                    } else {
                        errorRemove();
                    }
                }, 'json').error(errorRemove);
            });
            removeSession.modal();
        }

        function errorRemove() {
            $('.flashmessage').addClass('hide');
            $('.session_removed_error').removeClass('hide');
            $('#removeSession').modal('hide');
        }
    </script>
{% endblock %}
